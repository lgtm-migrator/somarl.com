{
  "name": "somarl.com",
  "homepage": "https://somarl.com",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start-js": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts-ts build",
    "build": "npm-run-all build-css build-js",
    "build-css": "node-sass-chokidar --include-path ./node_modules ./src/scss -o ./src/css",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./node_modules ./src/scss -o ./src/css --watch --recursive",
    "test": "react-scripts-ts test --env=jsdom",
    "ci": "react-scripts-ts test --ci --coverage --env=jsdom",
    "ci-jest": "jest --env=jsdom",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts-ts eject"
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "react": "16.7.0",
    "react-dom": "16.7.0"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "react-scripts-ts": "3.1.0",
    "typescript": "^3.0.3"
  }
}
