{
  "name": "www.somarl.com",
  "homepage": "https://somarl.com",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start-js": "node scripts/start.js",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "node scripts/build.js",
    "build": "npm-run-all build-css build-js",
    "build-css": "node-sass-chokidar --include-path ./node_modules ./src/scss -o ./src/css",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./node_modules ./src/scss -o ./src/css --watch --recursive",
    "test": "node scripts/test.js",
    "ci": "node scripts/test.js --ci --coverage",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "object-assign": "4.1.1",
    "promise": "8.0.1",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/react": "16.7.11",
    "@types/react-dom": "16.0.10",
    "autoprefixer": "^9.4.4",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "babel-preset-react-app": "^7.0.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "chalk": "^2.4.2",
    "css-loader": "^2.1.0",
    "dotenv": "^6.2.0",
    "dotenv-expand": "^4.2.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "folans.d.ts": "^1.1.0",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "fs-extra": "^7.0.1",
    "html-webpack-plugin": "^4.0.0-beta.5",
    "jest": "^23.6.0",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "raf": "^3.4.1",
    "react-dev-utils": "^7.0.1",
    "resolve": "^1.9.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "sw-precache-webpack-plugin": "^0.11.5",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.12.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.3",
    "webpack-dev-server": "^3.1.14",
    "webpack-manifest-plugin": "^2.0.4"
  }
}
