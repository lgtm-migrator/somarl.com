{
  "name": "@somarl.com/page",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start-js": "node scripts/start.js",
    "start": "NODE_ENV=development npm-run-all -p watch-css start-js",
    "build-js": "node scripts/build.js",
    "build": "npm-run-all build-css build-js",
    "build-css": "ts-node -O '{\"module\": \"commonjs\"}' scripts/build-css.ts",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./node_modules ./src/scss -o ./src/css --watch --recursive",
    "test": "node scripts/test.js",
    "ci": "node scripts/test.js --ci --coverage"
  },
  "dependencies": {
    "@somarl.com/pipe": "0.1.0",
    "bootstrap": "4.3.1",
    "object-assign": "4.1.1",
    "preact": "10.0.0-rc.0",
    "promise": "8.0.3",
    "whatwg-fetch": "3.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "7.3.0",
    "node-sass-chokidar": "1.3.5",
    "npm-run-all": "4.1.5",
    "ts-node": "8.4.1"
  }
}
