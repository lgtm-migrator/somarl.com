{
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019", "dom", "dom.iterable"],
    "module": "esnext", // prod: commonjs
    "moduleResolution": "node",
    "outDir": "build/dist",
    "rootDir": "src",
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "jest",
    "src/test",
    "server"
  ],
  "references": [
    { "path": "../pipe" }
  ]
}
